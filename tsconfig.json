{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "lib": ["ES7"],
    "paths": {
      "@model/*": ["src/core/model/*"],
      "@persistence/*": ["src/core/persistence/*"],
      "@authentication/*": ["src/core/authentication/*"],
      "@core": ["src/core/public-api.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
